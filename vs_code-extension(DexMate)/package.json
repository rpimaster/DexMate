{
  "name": "dexmate-dexcom-glucose-monitor",
  "displayName": "DexMate (dexcom glucose-monitor)",
  "description": "",
  "version": "0.0.2",
  "publisher": "DexMate",
  "icon": "assets/logo_png.png",
  "galleryBanner.color": "#D8E8D1",
  "keywords": [
  "glucose monitor",
  "dexcom",
  "diabetes",
  "health",
  "real-time"
  ],
  "license": "MIT",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dexmate.configure",
        "title": "DexMate: Configure Credentials"
      },
      {
        "command": "dexmate.updateGlucose",
        "title": "DexMate: Update Glucose Reading"
      }
    ],
    "configuration": {
      "title": "DexMate",
      "properties": {
        "dexmate.username": {
          "type": "string",
          "default": "",
          "description": "Dexcom account username"
        },
        "dexmate.password": {
          "type": "string",
          "default": "",
          "description": "Dexcom account password"
        },
        "dexmate.region": {
          "type": "string",
          "enum": ["us", "ous", "jp"],
          "default": "ous",
          "description": "Dexcom region (us, ous, or jp)"
        },
        "dexmate.unit": {
          "type": "string",
          "enum": ["mmol", "mgdl"],
          "default": "mmol",
          "description": "Glucose unit (mmol/L or mg/dL)"
        },
        "dexmate.targetLow": {
          "type": "number",
          "default": 4.0,
          "description": "Target low glucose value"
        },
        "dexmate.targetHigh": {
          "type": "number",
          "default": 10.0,
          "description": "Target high glucose value"
        },
        "dexmate.notifications": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable glucose notifications"
        },
        "dexmate.lastReadings": {
          "type": "array",
          "default": [],
          "description": "Store recent glucose readings"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "lru-cache": "^11.0.2"
  }
}
